<Page x:Class="TetrisPlayerWPF.PlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisPlayerWPF"
      xmlns:tetris="clr-namespace:TetrisDXControll;assembly=TetrisDXControll"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayPage">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <WindowsFormsHost VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <tetris:TetrisDX x:Name="DXPanel" Anchor="Top" Dock="Left"></tetris:TetrisDX>
        </WindowsFormsHost>
    </Grid>
</Page>
